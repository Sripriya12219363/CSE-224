fun main(){
  var a=40
  print(a)
  var TRY=40
  print(TRY)
}   

-----------------------------------------------------------------

fun main(){
    var a=10
    var b=5
    var A=20
    println(a)
    print(A)
    var __a=10
    print(__a)
} 

