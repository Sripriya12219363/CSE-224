fun main(){
  var age:Int=25
  println(age)
}

-------------------------------------------------------------------

fun main(){
  var a=15
	var b=2
	print("a: $a, b:$b and a*b: ${a*b}")
}

--------------------------------------------------------------------

class Person{
    var name:String="John Doe"
    val age: Int=30
    fun displayInfo(){
        println("Name: $name,Age: $age")
    }
}
fun main(){
    val person=Person()
    person.displayInfo()
}
